generator client {
  provider = "dart run orm"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id         String  @id @default(uuid())
  first_name String?
  last_name  String?
  posts      Post[]
}

model Post {
  id          String   @id @default(uuid())
  name        String?
  description String   @db.VarChar(300)
  date        DateTime @default(now())
  user        User     @relation(fields: [userId], references: [id])
  userId      String
}
