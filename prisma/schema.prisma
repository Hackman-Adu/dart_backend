generator client {
    provider = "dart run orm"
}

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

model User {
    user_id             String             @id @default(uuid())
    first_name          String             @default("")
    last_name           String             @default("")
    password            String
    email_address       String             @unique
    residential_address String             @default("")
    created             DateTime?          @default(now())
    updated_at          DateTime?          @updatedAt
    investments         Investment[]
    withdrawal_methods  WithDrawalMethod[]
    withdrawals         Withdrawal[]

    @@map("users")
}

model Investment {
    investment_id String       @id @default(uuid())
    user_id       String       @unique
    user          User?        @relation(fields: [user_id], references: [user_id])
    amount        Float        @default(0.0)
    withdrawals   Withdrawal[]

    @@map("investments")
}

model Withdrawal {
    withdrawal_id String     @id @default(uuid())
    description   String
    amount        Float
    investment_id String
    investment    Investment @relation(fields: [investment_id], references: [investment_id])
    user_id       String
    user          User       @relation(fields: [user_id], references: [user_id])

    @@map("withdrawals")
}

model WithDrawalMethod {
    id String @id @default(uuid())

    name String @default("")

    user_id String @unique

    user User? @relation(fields: [user_id], references: [user_id])

    @@map("withdrawal_methods")
}
